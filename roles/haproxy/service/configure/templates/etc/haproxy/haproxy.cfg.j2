global
    log /dev/log local0
    log /dev/log local1 notice
    daemon

defaults
    log global
    retries 3
    maxconn 2000
    timeout connect 5s
    timeout client 120s
    timeout server 120s

frontend kub3lo-disco
    mode tcp
    bind 0.0.0.0:8686
    default_backend kub3lo

backend kub3lo
    mode tcp
    balance roundrobin
    option tcp-check

{% for short_hostname, ipv4_address in backend_servers %}
    server {{ short_hostname }} {{ ipv4_address }}:6443 check port 6443
{% endfor %}
